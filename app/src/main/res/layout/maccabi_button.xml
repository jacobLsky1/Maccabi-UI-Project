<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135dp"
    android:layout_height="135dp">

    <Button
        android:id="@+id/theMaccabiButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="30dp"
        android:background="@drawable/round_button_blue"
        android:drawableTop="@drawable/ic_sun_24"
        android:drawableTint="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|center_horizontal"
        android:paddingVertical="10dp"
        android:text="זימון וביטול תורים"
        android:focusable="true"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteButton_button"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_clear_24"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_x_button"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>